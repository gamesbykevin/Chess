<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:visibility="invisible">

    <TableLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow style="@style/row_sw600">
            <TextView style="@style/text_tutorial_sw600" android:text="@string/save_replay" />
        </TableRow>

        <TableRow style="@style/row_sw600">
            <Button style="@style/button_sw600" android:text="@string/confirm_save" android:onClick="onClickYes" />
        </TableRow>

        <TableRow style="@style/row_sw600">
            <Button style="@style/button_sw600" android:text="@string/confirm_exit" android:onClick="onClickNo" />
        </TableRow>
    </TableLayout>

</RelativeLayout>